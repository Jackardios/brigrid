- var cols = 12;
.outer-container
    h1.header
        | Brigrid 
        span.accent Demo
    section.demo-section
        .grid-container
            div(class="grid-column-" + cols)
                h3.grid-container__title Static grid columns
            - var i = 1; 
            while (i < cols)
                div(class="grid-column-" + i)
                    .card= i
                div(class="grid-column-" + (cols - i))
                    .card= (cols - i)
                - i++;
            div(class="grid-column-" + cols)
                .card= cols
        .grid-container
            div(class="grid-column-" + cols)
                h3.grid-container__title Dynamic grid columns (xs:12, sm:6, md:4, lg:3, xl:2, xx:1)
            - var i = 1; 
            while (i <= cols)
                .grid-column-media
                    .card
                - i++;
